<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.HomeoneActivity"
    android:background="@drawable/home_shape">
    <LinearLayout
        android:id="@+id/fragment_1_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/homeone_fh"
                android:src="@mipmap/zuojiantou"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:text="CDD BOX"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="甜品 4 选 1"
                android:textSize="35dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="随时订  |  免预约  |  现制作"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/image1"/>
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/image4"/>
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/image3"/>
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/image5"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="甜品 4 选 1"
                android:textSize="15dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="❉  4寸雪域牛乳（1份）"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="❉  4寸提拉米苏（1份）"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="❉  4寸爆浆海盐奶盖（1份）"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="❉  4寸脏脏蛋糕（1份）"
                android:gravity="center"/>
        </LinearLayout>




    </LinearLayout>
</ScrollView>