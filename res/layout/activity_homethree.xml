<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.HomethreeActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/homethree_fh"
            android:src="@mipmap/zuojiantou"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="舒芙"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="舒芙芮松饼"
            android:textSize="35dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="随时订  |  免预约  |  现制作"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/three_tc_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="9.9元餐"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#7A6CB5"/>
        <TextView
            android:id="@+id/three_tc_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="14.8元餐"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#7A6CB5"/>
        <TextView
            android:id="@+id/three_tc_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="18.8元餐"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#7A6CB5"/>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/three_framelayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"/>

</LinearLayout>